{
  "name": "luxbin-desktop",
  "version": "1.0.0",
  "description": "LUXBIN Quantum Internet Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "luxbin",
    "quantum",
    "internet",
    "blockchain",
    "p2p"
  ],
  "author": "Nichole Christie",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.luxbin.desktop",
    "productName": "LUXBIN",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "python-backend/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.networking",
      "icon": "icons/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "icons/icon.png",
      "category": "Network",
      "target": ["AppImage", "deb"]
    }
  }
}
